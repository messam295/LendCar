@model IPagedList<LendCar.Models.Color>
    <table class="table table-striped custab table-responsive table-bordered">
        <thead style="color:#fff;background-color:var(--main-color)">
            <tr>
                <th>#</th>
                <th>Color</th>
                <th>Hex Code</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        @{
            int counter = Model.PageNumber * Model.PageSize - (Model.PageSize - 1);
            foreach (var color in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@color.Name</td>
                    <td><i class="fas fa-tint" style=" font-size: x-large;width:100%;height:100%; color:@color.HexValue"> @color.HexValue</i></td>
                    <td class="text-center">
                        <a data-edited-color-id="@color.Id" data-edited-color-name="@color.Name" data-edited-color-hex="@color.HexValue" class='btn btn-info btn-xs edit-color-btn' onclick="ShowEditColorModal(this)"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a data-deleted-color-id="@color.Id" data-deleted-color-name="@color.Name" class="btn btn-danger btn-xs delete-color" onclick="DeleteColor(this)"><span class="glyphicon glyphicon-remove "></span> Del</a>
                    </td>
                </tr>
                counter++;
            }
        }
    </table>
