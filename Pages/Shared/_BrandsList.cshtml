@model IPagedList<LendCar.Models.Brand>
    <table class="table table-striped custab">
        <thead>
            <tr>
                <th>#</th>
                <th>Brand</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        @for (int i = 1; i <= Model.Count; i++)
        {
            <tr>
                <td>@i</td>
                <td>@Model[i-1].Name</td>
                <td class="text-center">
                    <a class='btn btn-info btn-xs' data-toggle="modal" data-target="#product_view" href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    <a id="@Model[i-1].Id" class="btn btn-danger btn-xs delete-brand"><span class="glyphicon glyphicon-remove "></span> Del</a>
                </td>
            </tr>
        }

    </table>
