@model IPagedList<LendCar.Models.Brand>
    <table class="table table-striped custab">
        <thead>
            <tr>
                <th>#</th>
                <th>Brand</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        @for (int i = 1; i <= Model.Count; i++)
        {
            <tr>
                <td>@i</td>
                <td>@Model[i-1].Name</td>
                <td class="text-center">
                    <a data-edited-brand-id="@Model[i-1].Id" data-edited-brand-name="@Model[i-1].Name" class='btn btn-info btn-xs edit-brand-btn' onclick="ShowEditBrandModal(this)"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    <a data-deleted-brand-id="@Model[i-1].Id" data-deleted-brand-name="@Model[i-1].Name" class="btn btn-danger btn-xs delete-brand" onclick="DeleteBrand(this)"><span class="glyphicon glyphicon-remove "></span> Del</a>
                </td>
            </tr>
        }

    </table>
