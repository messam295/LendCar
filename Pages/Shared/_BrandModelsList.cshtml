        @{
            int counter = Model.PageNumber * Model.PageSize - (Model.PageSize - 1);
            if (Model.TotalItemCount > 0)
                foreach (var modelGroup in Model)
                {
                    <thead>
                        <tr>
                            <th colspan="3" class="text-center" style="background-color:#FEBE29;">
                                @modelGroup.Key
                            </th>
                        </tr>
                    </thead>
                    @foreach (var bmodel in modelGroup)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@bmodel.Name</td>
                            <td class="text-center">
                                <a data-edited-brandModel-id="@bmodel.Id" data-edited-brandModel-name="@bmodel.Name" class='btn btn-info btn-xs edit-brandModel-btn' onclick="ShowEditBrandModelModal(this)"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                                <a data-deleted-brandModel-id="@bmodel.Id" data-deleted-brandModel-name="@bmodel.Name" class="btn btn-danger btn-xs delete-brandModel" onclick="DeleteBrandModel(this)"><span class="glyphicon glyphicon-remove "></span> Del</a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            else {
                <tr>
                    <td colspan="3" class="text-center">
                        No models for this brand yet
                    </td>
                </tr>
                 }
        }


    </table>
