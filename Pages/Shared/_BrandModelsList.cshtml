        <thead>
            <tr>
                <th>#</th>
                <th>Model</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        @*@for (int i = 1; i <= Model.Count; i++)
        {
        <tr>
            <td>@i</td>
            <td>@Model[i - 1].Name</td>
            <td>@Model[i - 1].Brand.Name</td>
