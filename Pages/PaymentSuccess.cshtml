@page
@model LendCar.Pages.Shared.PaymentSuccessModel
@{
    ViewData["Title"] = "Payment Success";
}


<section id="success">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center col-md-offset-3">
                <div class="success">
                    <div class="success-icon-box">
                        <i class="fas fa-check"></i>
                    </div>

                    <div class="success-title">
                        <h3 class="modal-title">Awesome !</h3>
                    </div>

                    <div class="success-message">
                        <p>Your booking has been confirmed. Check your email for detials.</p>
                    </div>

                    <a class="btn btn-success"  asp-area="cars" asp-page="allCars"><i class="fas fa-backward"></i> Back To Home Page</a>
                </div>
            </div>
        </div>
    </div>
</section>



