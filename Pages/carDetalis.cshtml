@page
@{
    ViewData["Title"] = "carDetalis";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="banner-area" class="banner-area" style="background-image:url(images/banner/banner2.jpg)">
    <div class="banner-text">
            <div class="row">
                <div class="col-xs-12">
                            <div id="page-slider" class="owl-carousel owl-theme page-slider page-slider-small">
                                <div class="item">
                                    <img src="https://bit.ly/3c7TmBz" alt="" />
                                </div>

                                <div class="item">
                                    <img src="https://bit.ly/3foiQN4" alt="" />
                                </div>

                                <div class="item">
                                    <img src="https://bit.ly/35CjFh6" alt="" />
                                </div>

                                <div class="item">
                                    <img src="https://bit.ly/3dosX2W" alt="" />
                                </div>

                            </div><!-- Page slider end -->
                        </div><!-- Slider col end -->
            </div><!-- Row end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->


<section id="main-container" class="main-container">
    <div class="container">

        <div class="row">

            <div class="col-md-6">

                <div class="row">
                    <div class="col-md-2">
                        <p >THE CAR</p>
                    </div>
                    <div class="col-md-8">
                        <h1>Toyota Yaris 2013</h1>
                        <h2>4.2 <i class="fas fa-star-half-o "></i></h2>
                        <span>(116 Trip)</span>
                        <div class="row">
                            <div class="col-md-6">
                                <h3><i class="fas fa-tachometer"></i> 34 MPG</h3>
                                <h3><i class="fas fa-clone "></i> 2 doors</h3>
                            </div>
                            <div class="col-md-6">
                                <h3><i class="fas fa-car"></i> Gas</h3>
                                <h3><i class="fas fa-group "></i> 5 seats</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3">
                        <p>HOSTED BY</p>
                    </div>
                    <div class="col-md-8">
                        <div class="col-md-4 center-block">
                            <img src="https://bit.ly/2WAy4Ga" alt="..." class="img-circle">
                            <h3 ><span>5.0<i class="fa fa-star "></i></span></h3>
                        </div>
                        <div class="col-md-8">
                            <h3>Chris</h3>
                            <p>899 trips  <i class="fa fa-dot-circle-o"></i> Joined May 2015</p>
                            <p>All-Star Hosts like Chris are the top-rated, most experienced hosts on LendCar.</p>
                        </div>
                    </div>
                </div>


            </div>   

            <div class="col-md-6">
                <div class="row">
                    <h1 class="col-md-1">$32</h1><i class="col-md-11">per day</i>
                </div>
                <div class="row">
                    <form>
                        <div class="form-group col-md-10">
                            <label for="TripStart">Trip start : </label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="date" class="form-control" id="TripStart" placeholder="VIN ">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group col-md-10">
                                        <select id="VehicleType" class="form-control">
                                            <option value="volvo">10:00 AM</option>
                                            <option value="saab">11:00 AM</option>
                                            <option value="opel">12:00 AM</option>
                                            <option value="audi"> 1:00 AM</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <label for="Tripend">Trip end : </label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="date" class="form-control" id="Tripend" placeholder="Tripend ">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group col-md-10">
                                        <select id="Timeend" class="form-control">
                                            <option value="volvo">10:00 AM</option>
                                            <option value="saab">11:00 AM</option>
                                            <option value="opel">12:00 AM</option>
                                            <option value="audi"> 1:00 AM</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-9">
                            <label for="VehicleType">Pickup & return location : </label>
                            <select id="VehicleType" class="form-control ">
                                <option value="volvo">Convertibles</option>
                                <option value="saab">Vin</option>
                                <option value="opel">Convertibles</option>
                                <option value="audi">Pickup Trucks</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary col-md-6">Go To Checkout</button>
                    </form>

                </div>
            </div><!-- Content col end -->

        </div><!-- Row end -->

    </div><!-- Conatiner end -->
</section><!-- Main container end -->
