@page
@model LendCar.Pages.changePasswordModel
@{
    ViewData["Title"] = "changePassword";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="LoginPage">
    <div class="formLogin">
        <div class="text-center" style="padding:50px 0">
            <div class="logo">
                <img src="https://bit.ly/2zsnRnh" alt="car" />
            </div>
            <!-- Main Form -->
            <div class="login-form-1">
                <form id="register-form" class="text-left">
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="reg_password" class="sr-only">Old Password</label>
                                <input type="password" class="form-control" id="reg_password" name="reg_password" placeholder="Old Password">
                            </div>
                            <div class="form-group">
                                <label for="reg_password" class="sr-only">New Password</label>
                                <input type="password" class="form-control" id="reg_password" name="reg_password" placeholder="New Password">
                            </div>
                            <div class="form-group">
                                <label for="reg_password_confirm" class="sr-only">Password Confirm</label>
                                <input type="password" class="form-control" id="reg_password_confirm" name="reg_password_confirm" placeholder="confirm password">
                            </div>
                        </div>
                        <button type="submit" class="login-button"><i class="fas fa-car-side"></i></button>
                    </div>
                </form>
            </div>
            <!-- end:Main Form -->
        </div>
    </div>
</section>


