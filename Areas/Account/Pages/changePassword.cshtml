@page
@model LendCar.Pages.changePasswordModel
@{
    ViewData["Title"] = "changePassword";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="LoginPage">
    <div class="formLogin">
        <div class="text-center" style="padding:50px 0">
            <div class="logo">
                <img src="https://bit.ly/2zsnRnh" alt="car" />
            </div>
            <!-- Main Form -->
            <div class="login-form-1">
                <form id="register-form" class="text-left" method="post">
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label asp-for="Input.OldPassword" class="sr-only"></label>
                                <input type="password" asp-for="Input.OldPassword" class="form-control" placeholder="Old Password">
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.NewPassword" class="sr-only"></label>
                                <input type="password" asp-for="Input.NewPassword" class="form-control" placeholder="New Password">
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                                <input type="password" asp-for="Input.ConfirmPassword" class="form-control"  placeholder="confirm password">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                            </div>
                        </div>
                        <button type="submit" class="login-button"><i class="fas fa-car-side"></i></button>
                    </div>
                </form>
            </div>
            <!-- end:Main Form -->
        </div>
    </div>
</section>


