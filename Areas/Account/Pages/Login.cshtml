@page
@model LendCar.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- LOGIN FORM -->
    <section class="LoginPage">
        <div class="formLogin">
            <div class="text-center">
                <div class="logo">
                    <img src="https://bit.ly/3fqRV3g" alt="car" />
                </div>
                <!-- Main Form -->
                <div class="login-form-1">
                    <form class="text-left" asp-page="Login" method="post">
                        <div class="login-form-main-message"></div>
                        <div class="main-login-form">
                            <div class="login-group">
                                <div class="form-group">
                                    <label for="lg_Email" class="sr-only">Email</label>
                                    <input type="text" class="form-control" asp-for="UserName" placeholder="Enter Your UserName">
                                    <span asp-validation-for="UserName" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label for="lg_password" class="sr-only">Password</label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="form-group login-group-checkbox">
                                    <input type="checkbox" id="lg_remember" name="lg_remember">
                                    <label for="lg_remember">remember</label>
                                </div>
                            </div>
                            <button type="submit" class="login-button"><i class="fas fa-car-side"></i></button>

                        </div>
                        <a href="#" class="" id="googleAnch" onclick="document.getElementById('go').click()"></a>


                        <div class="etc-login-form">
                            <p>forgot your password? <a asp-page="./forgetPassword">click here</a></p>
                            <p>new user? <a asp-page="./Register">create new account</a></p>
                        </div>
                    </form>
                </div>
                <!-- end:Main Form -->
            </div>
        </div>
        <form id="external-account" asp-page="./ExternalLogin" 
                  asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            @foreach (var provider in Model.ExternalLogins)
            {
                <button style="visibility:hidden;" id="go" type="submit" 
                        class="btn btn-primary" name="provider" value="@provider.Name"
                        title="Log in using your @provider.DisplayName account">
                        @provider.DisplayName</button>
            }
        </form>
    </section>
