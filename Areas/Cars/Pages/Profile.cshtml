@page
@model LendCar.Pages.userProfileModel
@{
    ViewData["Title"] = "Profile";
}

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <img src="@Url.Content(Model.CurrentUser.ImageUrl)" alt="@Model.CurrentUser.FirstName 's picture" @*class="img-circle"*@>
                    </div>
                    <div class="col-md-8">
                        @*<div class="col-md-4 center-block">
                            <h3><span>5.0<i class="fa fa-star " style="color:gold"></i></span></h3>
                        </div>*@
                        <div class="col-md-12">
                            <h3>@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h3>
                            <p>@Model.CurrentUser.TripsNumber trips  <i class="fa fa-dot-circle-o"></i> Joined @Model.CurrentUser.JoinedAt</p>
                            <p>@Model.CurrentUser.City.Name</p>
                            <p>@Model.CurrentUser.BriefAboutMe</p>
                            <p>Has @Model.UserVehicles.Count vehicles</p>
                        </div>
                    </div>
                </div>
                <hr />
                
            </div>

        @*Left side*@
        <div class="col-md-6">
            <section id="news" class="news">
                <div class="container">
                    <h2 class="section-title">@Model.CurrentUser.FirstName's Vehicles</h2>
                    <hr />
                    <!--/ Title row end -->
                    @foreach (var vehicle in Model.UserVehicles)
                    {
                        <div class="row">
                            <div class="col-md-4 col-xs-12">
                                <div class="latest-post">
                                    <div class="latest-post-media">
                                        <a href="" class="latest-post-img">
                                            <img class="img-responsive" src="@Url.Content(vehicle.ImageUrl)" alt="@vehicle.Model.Brand.Name">
                                        </a>
                                    </div>
                                    <div class="post-body">
                                        <div class="post-title">
                                            <div>
                                                <h4>@vehicle.Model.Brand.Name @vehicle.Model.Name @vehicle.Year</h4>
                                                <h5>@vehicle.Rate <i class="fas fa-star-half-alt" style="color:forestgreen"></i><span>(@vehicle.TripsNumber Trips)</span></h5>
                                            </div>
                                        </div>
                                        <div class="latest-post-meta">
                                            <span class="post-item-date">
                                                <i class="fa fa-clock-o"></i> Available from @vehicle.StartDate
                                            </span>
                                        </div>
                                    </div>
                                </div><!-- Latest post end -->
                            </div><!-- 1st post col end -->
                        </div>
                            <a class="btn btn-primary" asp-page="carDetails" asp-area="Cars" asp-route-id="@vehicle.Id">Details</a>
                        
                    }
                    <!--/ Content row end -->

                    <div class="general-btn ">
                        <a class="btn btn-primary" href="#">See All Cars</a>
                    </div>

                </div>
                <!--/ Container end -->
            </section>
            <!--/ News end -->

        </div><!-- Content col end -->

        </div><!-- Row end -->

    </div><!-- Conatiner end -->
</section><!-- Main container end -->
